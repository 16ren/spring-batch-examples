<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <description>
        Simple Skip Job Example - with skip policy instead of skip-limit 
                                  and skippable-exceptions
    </description>
    <!-- 
        inline xmlns, otherwise it would look like 
        'batch:job, batch:step, etc.' 
    -->
    <job id="skipJob" xmlns="http://www.springframework.org/schema/batch">
        <step id="skipJobStep">
            <tasklet>
                <chunk 
                    reader="itemReader" 
                    writer="itemWriter" 
                    commit-interval="5"
                    skip-policy="skipPolicy">
                    <!-- item reader registered as stream to open the in-memory 
                         test-data-list and read with iterator.next() -->                        
                    <streams>
                        <stream ref="itemReader" />
                    </streams>
                </chunk>
            </tasklet>
            <listeners>
                <listener ref="jobListener" />
            </listeners>
        </step>
        <!-- registered at job level as well, to log job events -->        
        <listeners>            
            <listener ref="jobListener" />
        </listeners>
    </job>

    <bean id="itemReader" class="de.langmi.spring.batch.examples.skippolicyjob.SkipJobItemReader" />
    
    <bean id="itemWriter" class="de.langmi.spring.batch.examples.skippolicyjob.SkipJobItemWriter" />

    <bean id="jobListener" class="de.langmi.spring.batch.examples.skippolicyjob.SkipJobListener" />
    
    <bean id="skipPolicy" class="de.langmi.spring.batch.examples.skippolicyjob.SkipJobPolicy">
        <property name="skipLimit" value="2" />
    </bean>

</beans>
